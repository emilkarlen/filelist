# -*- shell-script -*-

#
# Tests that filter-on-tags is handled correctly by the shell instruction:
# A filter that excludes files from the shell command.
#

m4_include(common.m4)

home ..

[setup]

M4_SETUP_INSTALL_DATA_AND_INPUT__sc(tags.list)

[act]

M4_EXECUTABLE --filter-tags undefined-tag data/tags.list

[assert]

exitcode 0
stdout   empty
