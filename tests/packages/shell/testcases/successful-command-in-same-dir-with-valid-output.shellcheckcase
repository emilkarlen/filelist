# -*- shell-script -*-

#
# Tests executing a shell command.
# The shell command is executed from the file-list on the command line.
# The shell command exists with successful status and outputs valid
# file-names.
#

m4_include(common.m4)

home ..

[setup]

M4_SETUP_INSTALL_DATA_AND_INPUT__sc(successful-command-in-same-dir-with-valid-output.list)

[act]

M4_EXECUTABLE data/successful-command-in-same-dir-with-valid-output.list

[assert]

exitcode 0
stdout   --rel-home output/successful-command-in-same-dir-with-valid-output.txt
