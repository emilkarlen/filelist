# -*- shell-script -*-

#
# Tests executing a shell command.
# The shell command exists with unsuccessful status.
#

[conf]

m4_include(common.m4)

home = ..

[setup]

copy data

file data/unsuccessful-exit-command.list =
<<-
@shell exit 1
@print this-should-not-be-output
-


[act]

M4_EXECUTABLE data/unsuccessful-exit-command.list

[assert]


exit-code == M4_EXIT_SHELL_COMMAND_EXECUTION_ERROR

stdout empty
