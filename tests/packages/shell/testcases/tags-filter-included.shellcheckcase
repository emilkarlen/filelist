# -*- shell-script -*-

#
# Tests that filter-on-tags is handled correctly by the shell instruction:
# A filter that includes files from the shell command.
#

m4_include(common.m4)

home ..

[setup]

M4_SETUP_INSTALL_DATA_AND_INPUT(tags.list)

[act]

M4_EXECUTABLE --filter-tags tag1 data/tags.list

[assert]

exitcode 0
stdout   --rel-home output/tags-filter-included.txt
