# -*- shell-script -*-

#
# Tests how tags are imported from included files.
#
# The included file is located in a DIFFERENT directory.
#
# Tags set in an included file should also be set in the including file.
#

m4_include(common.m4)

home ..

[setup]

M4_SETUP_INSTALL_DATA_AND_INPUT__sc(include-import--in-other-dir.list)

[act]

M4_EXECUTABLE --append-tags data/include-import--in-other-dir.list

[assert]

exitcode 0
stdout   --rel-home output/include-import--in-other-dir.txt
