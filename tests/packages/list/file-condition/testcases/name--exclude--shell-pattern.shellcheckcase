# -*- shell-script -*-

#
# WHEN exclusion patterns (shell-pattern) are given
# THEN no file who's name matches the pattern
# SHOULD be printed
#

[conf]

m4_include(common.m4)

[setup]

M4_SETUP_INSTALL_DATA_AND_INPUT(name--exclude--shell-pattern.list)

[act]

M4_EXECUTABLE_REL_LIST data/name--exclude--shell-pattern.list

[assert]

M4_SORT_STDOUT_TO_TMP_FILE(stdout-sorted.txt)

exit-code == 0

contents -rel-tmp stdout-sorted.txt
         equals
         -file output/name--exclude--shell-pattern.txt
