# -*- shell-script -*-

#
# WHEN mode for handling missing files is "fail",
# and a file-path for a missing file is encountered,
# THEN the program
# SHOULD exit with exit status that indicates a missing file.
#

[conf]

m4_include(common.m4)

home = ..

[setup]

copy data

[act]

M4_EXECUTABLE --missing-file-handling fail data/list.list

[assert]

exit-code == M4_EXIT_FILE_DOES_NOT_EXIST
stdout equals -file output/fail.txt
