# -*- shell-script -*-

#
# WHEN stdin is used as a listfile on the command line
# THEN , in the inclusion hierarchy,
# SHOULD the file should be presented in the correct way
#
# (For the "correct way", see the expected output.)
#

[conf]

m4_include(common.m4)

home = ..

[setup]

copy data

stdin = -file input/should-be-relative-cwd--other.list

[act]

M4_EXECUTABLE --print-inclusion-hierarchy -- -

[assert]

exit-code == 0

stdout equals -file output/print-inclusion-hierarchy.txt
