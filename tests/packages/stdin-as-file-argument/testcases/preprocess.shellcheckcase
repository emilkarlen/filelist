# -*- shell-script -*-

#
# WHEN stdin is used as a listfile on the command line
# THEN it
# SHOULD be preprocessed just like normal files
#

[conf]

m4_include(common.m4)

home = ..

[setup]


copy data

stdin = -file input/preprocess.list


[act]

M4_EXECUTABLE --preprocessor M4_COMMON_SCRIPTS_DIR/add-txt-suffix-to-file-paths -- -

[assert]


exit-code == 0

stdout equals -file output/preprocess.txt
