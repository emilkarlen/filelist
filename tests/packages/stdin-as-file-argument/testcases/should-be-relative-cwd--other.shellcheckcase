# -*- shell-script -*-

#
# WHEN stdin is used as a listfile on the command line
# THEN paths used by instructions (other than file-path)
# SHOULD be relative the Current Working Directory of the process.
#

[conf]

m4_include(common.m4)

home = ..

[setup]

copy data

stdin = -file input/should-be-relative-cwd--other.list

[act]

M4_EXECUTABLE -- -

[assert]

exit-code == 0

stdout equals -file output/should-be-relative-cwd--other.txt
