# -*- shell-script -*-

#
# WHEN stdin is used as a listfile on the command line
# THEN it
# SHOULD be preprocessed just like normal files
#

m4_include(common.m4)

name:preprocess
home:..

setup.install:data

test.stdin:input/preprocess.list

test.run.cmdline:M4_EXECUTABLE --preprocessor M4_COMMON_SCRIPTS_DIR/add-txt-suffix-to-file-paths -- -

check.exitcode:0
check.stdout.file.eq:output/preprocess.txt
