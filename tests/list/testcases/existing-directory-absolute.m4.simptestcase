# -*- shell-script -*-

# Tests listing an existing directory using an absolute path to the directory.

m4_include(common.m4)

name:existing-directory-absolute
home:..

setup.install:data/existing-directory
setup.run.cmdline:ex -s -c g:CURRENT_DIRECTORY:s:CURRENT_DIRECTORY:${SIMPTEST_TESTROOT}:g -c x existing-directory/existing-directory-absolute.list

test.run.cmdline:M4_EXECUTABLE existing-directory/existing-directory-absolute.list | sort

check.prepare.replace-SIMPTEST-envvars/stdout

check.exitcode:0
check.stdout.file.eq/replaced:output/existing-directory-absolute.txt
